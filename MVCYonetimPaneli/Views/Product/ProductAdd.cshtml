@using MVCYonetimPaneli.Models

@{
    ViewBag.Title = "Ürün Ekle";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    <h2>Ürün Ekleme Syafası</h2>
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/ProductAdd" method="post" role="form">
                        <div class="form-group">
                            <label>Ürün Adı : </label>
                            <input type="text" class="form-control" placeholder="Ürün Adı Giriniz" name="UrunAdi">
                        </div>
                        <div class="form-group">
                            <label>Fiyat : </label>
                            <input type="number" class="form-control" placeholder="Fiyat Giriniz" name="Fiyat">
                        </div>
                        <div class="form-group">
                            <label>Stok : </label>
                            <input type="number" class="form-control" placeholder="Stok Giriniz" name="Stok">
                        </div>
                        <div class="form-group">
                            <label>Kategori : </label>
                            <select name="KategoriID" class="form-control">
                                @foreach (Kategoriler ctg in ViewBag.Categories)
                                {
                                    <option value="@ctg.KategoriID">@ctg.KategoriAdi</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tedarikçi : </label>
                            <select name="TedarikciID" class="form-control">
                                @foreach (Tedarikciler spl in ViewBag.Supplies)
                                {
                                    <option value="@spl.TedarikciID">@spl.SirketAdi</option>
                                }
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
