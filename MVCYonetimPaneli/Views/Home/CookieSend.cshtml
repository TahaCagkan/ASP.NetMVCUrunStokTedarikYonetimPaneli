
@{
    ViewBag.Title = "CookieSend";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    <h2>Cookie'ye Değer Atama Syafası</h2>
                </div>
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Home/CookieSend" method="post" role="form">
                        <div class="form-group">
                            <label>Cookie Adı : </label>
                            <input type="text" class="form-control" placeholder="Cookie Adı Giriniz" name="CookieAdi">
                        </div>
                        <div class="form-group">
                            <label>Cookie Değeri : </label>
                            <input type="text" class="form-control" placeholder="Cookie Değeri Giriniz" name="CookieDegeri">
                        </div>


                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
